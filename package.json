{
    "name": "adivate-ew-bot",
    "version": "0.0.1",
    "description": "Telegram bot for Energy Web related stuff",
    "author": "rob@adivate.net",
    "private": false,
    "license": "MIT",
    "main": "dist/src/index.js",
    "scripts": {
        "build": "del-cli dist && tsc",
        "postinstall": "yarn build",
        "start": "ts-node src/index.ts",
        "startx": "node --loader ts-node/esm src/index.ts",
        "test": "tsc --sourceMap && xo && ava",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
    },
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "@edjopato/telegraf-i18n": "^0.2.0",
        "@types/express": "^4.17.13",
        "@types/node": "^16.0.0",
        "@typescript-eslint/eslint-plugin": "^4.29.1",
        "@typescript-eslint/parser": "^4.29.1",
        "ava": "^3.0.0",
        "axios": "^0.27.2",
        "del-cli": "^4.0.1",
        "dotenv": "^10.0.0",
        "dotenv-expand": "^5.1.0",
        "eslint-config-xo": "^0.38.0",
        "eslint-config-xo-typescript": "^0.44.0",
        "express": "^4.17.1",
        "fetch": "^1.1.0",
        "https": "^1.0.0",
        "node-fetch": "^2.6.1",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.19",
        "telegraf": "^4.0.0",
        "telegraf-inline-menu": "^6.0.0",
        "telegraf-middleware-console-time": "^2.0.0",
        "telegraf-session-local": "^2.0.0",
        "ts-node": "^10.0.0",
        "typescript": "^4.2.3",
        "xo": "^0.44.0"
    },
    "devDependencies": {},
    "xo": {
        "prettier": true,
        "rules": {
            "ava/no-ignored-test-files": "off",
            "unicorn/prefer-node-protocol": "off",
            "import/extensions": [
                "error",
                "ignorePackages"
            ],
            "capitalized-comments": "off",
            "spaced-comment": "off",
            "unicorn/prefer-module": "off",
            "import/newline-after-import": "off",
            "unicorn/no-abusive-eslint-disable": "off",
            "padding-line-between-statements": "Off",
            "@typescript-eslint/no-implicit-any-catch": "off",
            "@typescript-eslint/restrict-template-expressions": "off",
            "node/prefer-global/process": "off"
        }
    }
}