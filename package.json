{
    "name": "adivate-ew-bot",
    "version": "0.0.1",
    "description": "Telegram bot for Energy Web related stuff",
    "author": "rob@adivate.net",
    "private": false,
    "license": "MIT",
    "scripts": {
        "build": "del-cli dist && tsc",
        "postinstall": "tsc",
        "start": "ts-node src/index.ts",
        "startx": "node --loader ts-node/esm src/index.ts",
        "test": "tsc --sourceMap && xo && ava",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
    },
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "@edjopato/telegraf-i18n": "^0.2.0",
        "del-cli": "^4.0.1",
        "dotenv": "^10.0.0",
        "dotenv-expand": "^5.1.0",
        "express": "^4.17.1",
        "source-map-support": "^0.5.19",
        "telegraf": "^4.0.0",
        "telegraf-inline-menu": "^6.0.0",
        "telegraf-middleware-console-time": "^2.0.0",
        "telegraf-session-local": "^2.0.0"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^1.0.1",
        "@types/express": "^4.17.13",
        "@types/node": "^16.0.0",
        "ava": "^3.0.0",
        "prettier": "^2.3.2",
        "ts-node": "^10.0.0",
        "typescript": "^4.2.3",
        "xo": "^0.42.0"
    },
    "xo": {
        "prettier": true,
        "rules": {
            "ava/no-ignored-test-files": "off",
            "unicorn/prefer-node-protocol": "off",
            "import/extensions": [
                "error",
                "ignorePackages"
            ]
        }
    }
}